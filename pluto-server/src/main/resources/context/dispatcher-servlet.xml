<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/mvc 
     http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd 
     http://www.springframework.org/schema/beans 
     http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
     http://www.springframework.org/schema/context 
     http://www.springframework.org/schema/context/spring-context-3.2.xsd">
     
 	<!-- http://blog.csdn.net/sunitjy/article/details/6782431 -->
    <!-- Activates mapping of @Controller -->
    <context:component-scan base-package="com.pluto.controller" >
    	<context:include-filter type="regex" expression="com.pluto.controller.*"/>
    </context:component-scan>
	<context:component-scan base-package="com.pluto.service.*" />
    <!--Spring3.1开始的注解 HandlerMapping -->  
   <bean id="requestMappingHandlerMapping" class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping"/>  
   <!--Spring3.1开始的注解 HandlerAdapter -->  
   <bean id="requestMappingHandlerAdapter" class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerAdapter"/> 
   <bean id="filenameController" class="org.springframework.web.servlet.mvc.UrlFilenameViewController" />
   

	<mvc:annotation-driven>
        <mvc:message-converters register-defaults="true">
            <!-- 将StringHttpMessageCOnverter的默认编码设为UTF-8 -->
            <bean class="org.springframework.http.converter.StringHttpMessageConverter">
                <constructor-arg value="UTF-8" />
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>
    
   <!-- 对静态资源文件的访问 --> 
    <mvc:default-servlet-handler/>     

	<!--
		View Resolver for JSPs 如果viewName在viewNames列表中，则使用JSP View，
		否则转给ViewResolver链中的下一个viewResolver处理（也就是tiles）
	-->
	<!-- 定义JSP文件的位置,视图解释类 -->
	<bean id="jstlViewResolver"	class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/page/" />
		<property name="suffix" value=".jsp" /> 
		<property name="order" value="1" />
	</bean>
     
	<!-- View Resolver for JSPs -->
	<bean id="viewResolver"	class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="requestContextAttribute" value="rc" />
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/page/" />
		<!-- property name="suffix" value=".jsp" / -->
		<property name="order" value="2" />
	</bean>

	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename" value="classpath:message" />
	</bean>
	<bean id="configProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">  
       <property name="locations">  
           <list>  
               <value>classpath:properties/app.properties</value>  
           </list>  
       </property>  
    </bean> 

</beans>
